{
    "name": "signpostmarv/daft-interface-collector",
    "description": "interface collector. daft reasons again.",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\DaftInterfaceCollector\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SignpostMarv\\DaftInterfaceCollector\\Tests\\": "./Tests/"
        }
    },
    "config": {
        "classmap-authoritative": true,
        "sort-packages": true
    },
	"conflict": {
		"vimeo/psalm": "<3.10.1"
	},
    "scripts": {
        "tests": [
            "phpunit -vvvv --no-coverage",
            "psalm --show-info=false",
            "@static-analysis"
        ],
        "static-analysis": [
            "phpcpd src Tests",
            "phpmnd ./ --exclude=./phpunit/ --exclude=./vendor/ --non-zero-exit-on-violation --hint",
            "composer-require-checker check ./composer.json",
            "php-cs-fixer fix --verbose --allow-risky=yes --dry-run --diff-format=udiff",
            "churn run src Tests"
        ]
    },
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "ext-mbstring": "*",
        "bmitch/churn-php": "^1.0",
        "infection/infection": "^0.15.0",
        "maglnet/composer-require-checker": "^2.0",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "^8.5",
        "povils/phpmnd": "^2.1",
        "psalm/plugin-phpunit": "^0.9.1",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.1",
        "signpostmarv/php-cs-fixer-config": "^0.16.3",
        "vimeo/psalm": "^3.10"
    }
}
